@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Function to get CSS variable colors
        function getCSSVar(varName) {
            return getComputedStyle(document.documentElement).getPropertyValue(varName).trim();
        }

        // Function to update chart colors based on theme
        function getChartColors() {
            return {
                gridColor: getCSSVar('--border-secondary') || 'rgba(0, 0, 0, 0.1)',
                textColor: getCSSVar('--text-tertiary') || '#94a3b8'
            };
        }

        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(revenueCtx, {
            type: 'bar',
            data: {
                labels: ['Th√°ng 1', 'Th√°ng 2', 'Th√°ng 3', 'Th√°ng 4', 'Th√°ng 5', 'Th√°ng 6'],
                datasets: [{
                    label: 'Doanh thu',
                    data: [45000, 52000, 48000, 65000, 70000, 85000],
                    backgroundColor: function(context) {
                        const chart = context.chart;
                        const {ctx, chartArea} = chart;
                        if (!chartArea) return;
                        const gradient = ctx.createLinearGradient(0, chartArea.bottom, 0, chartArea.top);
                        gradient.addColorStop(0, 'rgba(78, 95, 255, 0.5)');
                        gradient.addColorStop(1, 'rgba(118, 75, 162, 0.8)');
                        return gradient;
                    },
                    borderRadius: 10,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: getChartColors().gridColor,
                            drawBorder: false
                        },
                        ticks: {
                            color: getChartColors().textColor
                        }
                    },
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            color: getChartColors().textColor
                        }
                    }
                }
            }
        });

        // Category Chart (Donut)
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        const categoryChart = new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: ['ƒê·ªì u·ªëng', 'Th·ª±c ph·∫©m', 'Snack', 'Kh√°c'],
                datasets: [{
                    data: [42, 28, 18, 12],
                    backgroundColor: [
                        '#4E5FFF',
                        '#f59e0b',
                        '#10b981',
                        '#ef4444'
                    ],
                    borderWidth: 0,
                    cutout: '70%'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Function to update chart colors when theme changes
        function updateChartColors() {
            const colors = getChartColors();
            
            // Update revenue chart
            if (revenueChart) {
                revenueChart.options.scales.y.grid.color = colors.gridColor;
                revenueChart.options.scales.y.ticks.color = colors.textColor;
                revenueChart.options.scales.x.ticks.color = colors.textColor;
                revenueChart.update('none'); // Update without animation
            }
        }

        // Watch for theme changes
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.type === 'attributes' && mutation.attributeName === 'data-theme') {
                    updateChartColors();
                }
            });
        });

        // Start observing the html element for theme changes
        observer.observe(document.documentElement, {
            attributes: true,
            attributeFilter: ['data-theme']
        });

        // Order tabs interaction
        let currentStatus = '';
        document.querySelectorAll('.order-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.order-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                
                const status = this.getAttribute('data-status');
                currentStatus = status;
                loadOrdersByStatus(status);
            });
        });

        // Date range selector
        document.querySelectorAll('.date-btn[data-range]').forEach(btn => {
            btn.addEventListener('click', function() {
                const range = this.getAttribute('data-range');
                window.location.href = `@Url.Action("Index", "Dashboard")?dateRange=${range}`;
            });
        });
        
        // Custom date picker
        document.getElementById('customDateBtn')?.addEventListener('click', function() {
            const startDate = prompt('Nh·∫≠p ng√†y b·∫Øt ƒë·∫ßu (yyyy-mm-dd):');
            const endDate = prompt('Nh·∫≠p ng√†y k·∫øt th√∫c (yyyy-mm-dd):');
            if (startDate && endDate) {
                window.location.href = `@Url.Action("Index", "Dashboard")?startDate=${startDate}&endDate=${endDate}`;
            }
        });
        
        // Search functionality
        let searchTimeout;
        document.getElementById('dashboardOrderSearch')?.addEventListener('input', function(e) {
            clearTimeout(searchTimeout);
            const searchTerm = e.target.value;
            
            searchTimeout = setTimeout(() => {
                if (searchTerm.length > 0) {
                    searchOrders(searchTerm);
                } else {
                    loadOrdersByStatus(currentStatus);
                }
            }, 500);
        });
        
        // Load orders by status
        function loadOrdersByStatus(status) {
            fetch(`@Url.Action("GetOrdersByStatus", "Dashboard")?status=${status}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        updateOrdersTable(data.orders);
                    }
                })
                .catch(error => console.error('Error:', error));
        }
        
        // Search orders
        function searchOrders(searchTerm) {
            fetch(`@Url.Action("SearchOrders", "Dashboard")?searchTerm=${encodeURIComponent(searchTerm)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        updateOrdersTable(data.orders);
                    }
                })
                .catch(error => console.error('Error:', error));
        }
        
        // Update orders table
        function updateOrdersTable(orders) {
            const tbody = document.getElementById('ordersTableBody');
            if (!tbody) return;
            
            if (orders.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="8" style="text-align: center; padding: 40px; color: #94a3b8;">
                            <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 16px; display: block;"></i>
                            Kh√¥ng t√¨m th·∫•y ƒë∆°n h√†ng n√†o
                        </td>
                    </tr>
                `;
                return;
            }
            
            tbody.innerHTML = orders.map(order => `
                <tr>
                    <td><strong>#${order.orderId}</strong></td>
                    <td>${order.customerName}</td>
                    <td>${order.products}</td>
                    <td>${order.orderDate}</td>
                    <td><strong>${order.totalAmount.toLocaleString()}‚Ç´</strong></td>
                    <td>
                        <span class="status-badge ${order.status}">${order.statusText}</span>
                    </td>
                    <td>
                        <div class="actions">
                            <a href="@Url.Action("Details", "Orders")?id=${order.orderId}" class="action-btn" title="Xem chi ti·∫øt">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            `).join('');
        }
    </script>
}
