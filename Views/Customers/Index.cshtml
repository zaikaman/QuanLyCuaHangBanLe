<div class="customers-card">
    <div class="customers-header">
        <form asp-action="Index" method="get" style="margin: 0;">
            <input type="text" name="searchTerm" class="search-input" placeholder="üîç T√¨m ki·∫øm kh√°ch h√†ng..." value="@ViewBag.SearchTerm" />
