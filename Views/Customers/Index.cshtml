        border: 1px solid #e5e5e5;
        border-radius: 8px;
        width: 300px;
        font-size: 0.9rem;
        background: #fafafa;
    }

    .search-input:focus {
        outline: none;
        border-color: #4E5FFF;
        background: white;
        box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
    }

    .customers-table {
        width: 100%;
        border-collapse: collapse;
    }

    .customers-table thead {
