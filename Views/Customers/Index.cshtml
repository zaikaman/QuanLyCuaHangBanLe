        border-bottom: 1px solid #f5f5f5;
        color: #1a1a1a;
        font-size: 0.95rem;
    }

    .customers-table tbody tr {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .customers-table tbody tr:hover {
