                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchTerm="@ViewBag.SearchTerm">Sau ‚Ä∫</a>
                </li>
            </ul>
        </div>
    }
</div>

<script>
    // Auto-submit search form khi g√µ (v·ªõi debounce)
    let searchTimeout;
    document.querySelector('.search-input').addEventListener('input', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            e.target.closest('form').submit();
        }, 500); // ƒê·ª£i 500ms sau khi ng∆∞·ªùi d√πng ng·ª´ng g√µ
    });
</script>
