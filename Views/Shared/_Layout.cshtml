<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý cửa hàng</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #ffffff;
            color: #1a1a1a;
            line-height: 1.6;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 260px;
            background: #1a1a1a;
            border-right: 1px solid #2a2a2a;
            z-index: 100;
            overflow-y: auto;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .sidebar-header {
            padding: 30px 24px;
            border-bottom: 1px solid #2a2a2a;
            background: #1a1a1a;
        }

        .sidebar-header h1 {
            font-size: 1.4rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #ffffff;
            letter-spacing: -0.02em;
        }

        .sidebar-nav {
            padding: 24px 0;
        }

        .nav-section {
            margin-bottom: 32px;
        }

        .nav-section-title {
            padding: 0 24px;
            margin-bottom: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            color: #666666;
            letter-spacing: 1px;
        }

        .nav-item {
            margin: 0;
            padding: 0 12px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            color: #999999;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 0.9rem;
            gap: 12px;
            font-weight: 500;
        }

        .nav-link:hover {
            background: #2a2a2a;
            color: #ffffff;
            transform: translateX(2px);
        }

        .nav-link.active {
            background: #ffffff;
            color: #1a1a1a;
            font-weight: 600;
        }

        .nav-icon {
            font-size: 1.3rem;
            width: 24px;
            text-align: center;
        }

        /* Main Content */
        .main-wrapper {
            margin-left: 260px;
            min-height: 100vh;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: #fafafa;
        }

        .topbar {
            background: #ffffff;
            height: 72px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 32px;
            border-bottom: 1px solid #e5e5e5;
            position: sticky;
            top: 0;
            z-index: 90;
        }

        .topbar-left {
            display: flex;
            align-items: center;
            gap: 24px;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a1a1a;
            letter-spacing: -0.02em;
        }

        .topbar-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 16px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid transparent;
        }

        .user-menu:hover {
            background: #fafafa;
            border-color: #e5e5e5;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #1a1a1a;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .user-info {
            text-align: right;
        }

        .user-name {
            font-weight: 600;
            font-size: 0.9rem;
            color: #1a1a1a;
        }

        .user-role {
            font-size: 0.8rem;
            color: #666666;
        }

        .content-area {
            padding: 32px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 0;
                transform: translateX(-100%);
            }

            .sidebar.active {
                width: 260px;
                transform: translateX(0);
            }

            .main-wrapper {
                margin-left: 0;
            }

            .page-title {
                font-size: 1.2rem;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h1>🛒 Store Manager</h1>
        </div>
        <nav class="sidebar-nav">
            <div class="nav-section">
                <div class="nav-section-title">Tổng quan</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <span class="nav-icon">📊</span>
                        <span>Dashboard</span>
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Quản lý</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="Index">
                        <span class="nav-icon">📦</span>
                        <span>Sản phẩm</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Index">
                        <span class="nav-icon">👥</span>
                        <span>Khách hàng</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Orders" asp-action="Index">
                        <span class="nav-icon">🛍️</span>
                        <span>Đơn hàng</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Inventory" asp-action="Index">
                        <span class="nav-icon">📋</span>
                        <span>Tồn kho</span>
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Kinh doanh</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Promotions" asp-action="Index">
                        <span class="nav-icon">🎁</span>
                        <span>Khuyến mãi</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Categories" asp-action="Index">
                        <span class="nav-icon">📑</span>
                        <span>Danh mục</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Suppliers" asp-action="Index">
                        <span class="nav-icon">🏭</span>
                        <span>Nhà cung cấp</span>
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Hệ thống</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                        <span class="nav-icon">👤</span>
                        <span>Người dùng</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                        <span class="nav-icon">🚪</span>
                        <span>Đăng xuất</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <div class="main-wrapper">
        <header class="topbar">
            <div class="topbar-left">
                <h2 class="page-title">@ViewData["Title"]</h2>
            </div>
            <div class="topbar-right">
                <div class="user-menu">
                    <div class="user-avatar">A</div>
                    <div class="user-info">
                        <div class="user-name">Admin</div>
                        <div class="user-role">Quản trị viên</div>
                    </div>
                </div>
            </div>
        </header>

        <main class="content-area">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
