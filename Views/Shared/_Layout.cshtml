<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý cửa hàng</title>
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Gilroy', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #f8f9fc;
            color: #1e293b;
            line-height: 1.5;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            font-size: 15px;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 260px;
            background: #ffffff;
            border-right: 1px solid #f0f0f5;
            z-index: 100;
            overflow-y: auto;
            overflow-x: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.01);
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 28px 20px;
            border-bottom: 1px solid #f0f0f5;
            flex-shrink: 0;
        }

        .sidebar-header h1 {
            font-size: 1.3rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            color: #1e293b;
            letter-spacing: -0.03em;
        }

        .logo-icon {
            width: 44px;
            height: 44px;
            background: #4E5FFF;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #ffffff;
            box-shadow: 0 2px 8px rgba(78, 95, 255, 0.25);
        }

        .sidebar-nav {
            padding: 20px 10px;
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
        }

        .nav-section {
            margin-bottom: 6px;
        }

        .nav-section-title {
            padding: 10px 14px 6px;
            font-size: 0.65rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #94a3b8;
            letter-spacing: 0.8px;
        }

        .nav-item {
            margin: 0;
            padding: 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 11px 14px;
            color: #64748b;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.2s ease;
            font-size: 0.9rem;
            gap: 12px;
            font-weight: 500;
            margin: 2px 0;
            letter-spacing: -0.01em;
        }

        .nav-link:hover {
            background: #f8fafc;
            color: #4E5FFF;
        }

        .nav-link.active {
            background: #4E5FFF;
            color: #ffffff;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(78, 95, 255, 0.25);
        }

        .nav-icon {
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

        .sidebar-footer {
            position: relative;
            bottom: auto;
            left: auto;
            right: auto;
            padding: 16px 10px;
            border-top: 1px solid #f0f0f5;
            background: #ffffff;
            flex-shrink: 0;
        }

        .logout-link {
            color: #ef4444 !important;
        }

        .logout-link:hover {
            background: #fef2f2 !important;
        }

        /* Main Content */
        .main-wrapper {
            margin-left: 260px;
            min-height: 100vh;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: #f8f9fc;
        }

        .topbar {
            background: #ffffff;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 32px;
            border-bottom: 1px solid #f0f0f5;
            position: sticky;
            top: 0;
            z-index: 90;
        }

        .topbar-left {
            display: flex;
            align-items: center;
            gap: 24px;
        }

        .menu-toggle {
            display: none;
            background: transparent;
            border: none;
            color: #64748b;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 8px;
            border-radius: 8px;
            transition: all 0.2s;
        }

        .menu-toggle:hover {
            background: #f1f5f9;
            color: #1e293b;
        }

        .greeting {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .greeting-text {
            font-size: 1.4rem;
            font-weight: 700;
            color: #1e293b;
            letter-spacing: -0.03em;
        }

        .greeting-subtext {
            font-size: 0.85rem;
            color: #94a3b8;
            margin: 0;
            font-weight: 500;
        }

        .topbar-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .topbar-actions {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .topbar-action {
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            color: #64748b;
            cursor: pointer;
            transition: all 0.2s;
            position: relative;
        }

        .topbar-action:hover {
            background: #f1f5f9;
            color: #4E5FFF;
            border-color: #cbd5e1;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
        }

        .topbar-action .badge {
            position: absolute;
            top: 8px;
            right: 8px;
            width: 8px;
            height: 8px;
            background: #ef4444;
            border-radius: 50%;
            border: 2px solid #ffffff;
            display: block;
        }
        
        .topbar-action .notification-badge {
            position: absolute;
            top: 6px;
            right: 6px;
            min-width: 18px;
            height: 18px;
            background: #ef4444;
            border-radius: 10px;
            border: 2px solid #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            color: #ffffff;
            font-weight: 600;
            padding: 0 4px;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 6px 12px 6px 6px;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.2s;
            background: #f8fafc;
            border: 1px solid #e2e8f0;
        }

        .user-menu:hover {
            background: #f1f5f9;
            border-color: #cbd5e1;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        }

        .user-avatar {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            background: #4E5FFF;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffffff;
            font-weight: 600;
            font-size: 1rem;
            overflow: hidden;
        }

        .user-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .user-info {
            text-align: left;
            display: flex;
            flex-direction: column;
        }

        .user-name {
            font-weight: 600;
            font-size: 0.9rem;
            color: #1e293b;
            line-height: 1.2;
        }

        .user-role {
            font-size: 0.8rem;
            color: #94a3b8;
        }

        .content-area {
            padding: 28px 32px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .main-wrapper {
                margin-left: 0;
            }

            .menu-toggle {
                display: block;
            }

            .greeting-text {
                font-size: 1.3rem;
            }

            .topbar-actions {
                gap: 4px;
            }

            .user-info {
                display: none;
            }
        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h1>
                <div class="logo-icon">
                    <i class="fas fa-store"></i>
                </div>
                Quản lý cửa hàng
            </h1>
        </div>
        <nav class="sidebar-nav">
            <div class="nav-section">
                <div class="nav-section-title">Tổng quan</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="nav-icon fas fa-chart-line"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Quản lý</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Products" asp-action="Index">
                        <i class="nav-icon fas fa-box"></i>
                        <span>Sản phẩm</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Index">
                        <i class="nav-icon fas fa-users"></i>
                        <span>Khách hàng</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Orders" asp-action="Index">
                        <i class="nav-icon fas fa-shopping-cart"></i>
                        <span>Đơn hàng</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Inventory" asp-action="Index">
                        <i class="nav-icon fas fa-warehouse"></i>
                        <span>Tồn kho</span>
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Kinh doanh</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Promotions" asp-action="Index">
                        <i class="nav-icon fas fa-gift"></i>
                        <span>Khuyến mãi</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Categories" asp-action="Index">
                        <i class="nav-icon fas fa-tags"></i>
                        <span>Danh mục</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Suppliers" asp-action="Index">
                        <i class="nav-icon fas fa-truck"></i>
                        <span>Nhà cung cấp</span>
                    </a>
                </div>
            </div>

            <div class="nav-section">
                <div class="nav-section-title">Hệ thống</div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                        <i class="nav-icon fas fa-user-cog"></i>
                        <span>Người dùng</span>
                    </a>
                </div>
            </div>
        </nav>

        <div class="sidebar-footer">
            <div class="nav-item">
                <a class="nav-link logout-link" asp-controller="Auth" asp-action="Logout">
                    <i class="nav-icon fas fa-sign-out-alt"></i>
                    <span>Đăng xuất</span>
                </a>
            </div>
        </div>
    </div>

    <div class="main-wrapper">
        <header class="topbar">
            <div class="topbar-left">
                <button class="menu-toggle" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="greeting">
                    <h2 class="greeting-text">@ViewData["Title"]</h2>
                    <p class="greeting-subtext">Chào mừng trở lại với hệ thống</p>
                </div>
            </div>
            <div class="topbar-right">
                <div class="topbar-actions">
                    <button class="topbar-action" title="Tìm kiếm" id="globalSearchBtn">
                        <i class="fas fa-search"></i>
                    </button>
                    <button class="topbar-action" title="Thông báo" id="notificationBtn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <button class="topbar-action" title="Cài đặt" id="settingsBtn">
                        <i class="fas fa-cog"></i>
                    </button>
                </div>
                <div class="user-menu">
                    <div class="user-avatar">
                        <img src="https://ui-avatars.com/api/?name=Admin&background=667eea&color=fff" alt="Admin" />
                    </div>
                    <div class="user-info">
                        <div class="user-name">Admin</div>
                        <div class="user-role">Quản trị viên</div>
                    </div>
                </div>
            </div>
        </header>

        <main class="content-area">
            @RenderBody()
        </main>
    </div>

    <!-- Global Search Modal -->
    <div id="globalSearchModal" class="modal-overlay" style="display: none;">
        <div class="modal-container" style="max-width: 600px;">
            <div class="modal-header">
                <h3>Tìm kiếm</h3>
                <button class="modal-close" onclick="closeGlobalSearch()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="search-input-wrapper">
                    <i class="fas fa-search"></i>
                    <input type="text" id="globalSearchInput" placeholder="Tìm kiếm sản phẩm, đơn hàng, khách hàng..." autofocus>
                </div>
                <div id="globalSearchResults" class="search-results" style="margin-top: 20px; max-height: 400px; overflow-y: auto;">
                    <p style="color: #94a3b8; text-align: center; padding: 20px;">Nhập từ khóa để tìm kiếm...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Notifications Modal -->
    <div id="notificationsModal" class="modal-overlay" style="display: none;">
        <div class="modal-container" style="max-width: 400px; max-height: 600px;">
            <div class="modal-header">
                <h3>Thông báo</h3>
                <button class="modal-close" onclick="closeNotifications()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" style="padding: 0;">
                <div class="notification-list">
                    <div class="notification-item unread">
                        <div class="notification-icon" style="background: #4E5FFF;">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-title">Đơn hàng mới</div>
                            <div class="notification-text">Bạn có 3 đơn hàng mới cần xử lý</div>
                            <div class="notification-time">5 phút trước</div>
                        </div>
                    </div>
                    <div class="notification-item">
                        <div class="notification-icon" style="background: #10b981;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-title">Đơn hàng hoàn thành</div>
                            <div class="notification-text">Đơn hàng #001234 đã được giao thành công</div>
                            <div class="notification-time">1 giờ trước</div>
                        </div>
                    </div>
                    <div class="notification-item">
                        <div class="notification-icon" style="background: #f59e0b;">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-title">Sản phẩm sắp hết</div>
                            <div class="notification-text">Có 5 sản phẩm sắp hết hàng trong kho</div>
                            <div class="notification-time">2 giờ trước</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Settings Modal -->
    <div id="settingsModal" class="modal-overlay" style="display: none;">
        <div class="modal-container" style="max-width: 500px;">
            <div class="modal-header">
                <h3>Cài đặt</h3>
                <button class="modal-close" onclick="closeSettings()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="settings-section">
                    <h4>Giao diện</h4>
                    <div class="setting-item">
                        <label>
                            <input type="checkbox" checked> Chế độ tối
                        </label>
                    </div>
                    <div class="setting-item">
                        <label>
                            <input type="checkbox" checked> Hiển thị thông báo
                        </label>
                    </div>
                </div>
                <div class="settings-section" style="margin-top: 20px;">
                    <h4>Ngôn ngữ</h4>
                    <select class="form-control">
                        <option selected>Tiếng Việt</option>
                        <option>English</option>
                    </select>
                </div>
                <div class="settings-section" style="margin-top: 20px;">
                    <h4>Tài khoản</h4>
                    <button class="btn btn-outline" style="width: 100%; margin-bottom: 10px;">Đổi mật khẩu</button>
                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger" style="width: 100%; text-decoration: none; display: inline-block; text-align: center;">Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toastContainer" class="toast-container"></div>

    <style>
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10000;
            animation: fadeIn 0.2s;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            width: 90%;
            animation: slideUp 0.3s;
            overflow: hidden;
        }

        @@keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            padding: 24px;
            border-bottom: 1px solid #f0f0f5;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h3 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 700;
            color: #1e293b;
        }

        .modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #94a3b8;
            cursor: pointer;
            padding: 4px;
            transition: all 0.2s;
        }

        .modal-close:hover {
            color: #1e293b;
        }

        .modal-body {
            padding: 24px;
        }

        .search-input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .search-input-wrapper i {
            position: absolute;
            left: 16px;
            color: #94a3b8;
        }

        .search-input-wrapper input {
            width: 100%;
            padding: 14px 16px 14px 48px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.2s;
        }

        .search-input-wrapper input:focus {
            outline: none;
            border-color: #4E5FFF;
        }

        .notification-list {
            max-height: 500px;
            overflow-y: auto;
        }

        .notification-item {
            display: flex;
            gap: 16px;
            padding: 16px 24px;
            border-bottom: 1px solid #f0f0f5;
            transition: all 0.2s;
            cursor: pointer;
        }

        .notification-item:hover {
            background: #f8fafc;
        }

        .notification-item.unread {
            background: #f0f4ff;
        }

        .notification-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .notification-content {
            flex: 1;
        }

        .notification-title {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 4px;
        }

        .notification-text {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 4px;
        }

        .notification-time {
            font-size: 0.8rem;
            color: #94a3b8;
        }

        .settings-section h4 {
            font-size: 1rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 12px;
        }

        .setting-item {
            padding: 12px 0;
        }

        .setting-item label {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            color: #475569;
        }

        .btn-outline {
            background: white;
            border: 2px solid #e2e8f0;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-outline:hover {
            border-color: #4E5FFF;
            color: #4E5FFF;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        /* Toast Styles */
        .toast-container {
            position: fixed;
            top: 24px;
            right: 24px;
            z-index: 10001;
            display: flex;
            flex-direction: column;
            gap: 12px;
            max-width: 400px;
        }

        .toast {
            background: white;
            border-radius: 12px;
            padding: 16px 20px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            gap: 12px;
            animation: slideInRight 0.3s ease-out;
            min-width: 300px;
            border-left: 4px solid;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .toast.removing {
            animation: slideOutRight 0.3s ease-out forwards;
        }

        @@keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }

        .toast-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .toast-content {
            flex: 1;
        }

        .toast-title {
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 2px;
            color: #1e293b;
        }

        .toast-message {
            font-size: 0.85rem;
            color: #64748b;
        }

        .toast-close {
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            padding: 4px;
            font-size: 1.2rem;
            transition: all 0.2s;
            flex-shrink: 0;
        }

        .toast-close:hover {
            color: #1e293b;
        }

        .toast.success {
            border-left-color: #10b981;
        }

        .toast.success .toast-icon {
            background: #d1fae5;
            color: #10b981;
        }

        .toast.error {
            border-left-color: #ef4444;
        }

        .toast.error .toast-icon {
            background: #fee2e2;
            color: #ef4444;
        }

        .toast.warning {
            border-left-color: #f59e0b;
        }

        .toast.warning .toast-icon {
            background: #fef3c7;
            color: #f59e0b;
        }

        .toast.info {
            border-left-color: #3b82f6;
        }

        .toast.info .toast-icon {
            background: #dbeafe;
            color: #3b82f6;
        }
    </style>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Menu toggle for mobile
        document.getElementById('menuToggle')?.addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
        });

        // Active nav link based on current controller
        const currentPath = window.location.pathname.toLowerCase();
        document.querySelectorAll('.nav-link').forEach(link => {
            const href = link.getAttribute('href')?.toLowerCase();
            if (href && currentPath.includes(href)) {
                link.classList.add('active');
            }
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.sidebar');
            const menuToggle = document.getElementById('menuToggle');
            
            if (window.innerWidth <= 768 && sidebar.classList.contains('active')) {
                if (!sidebar.contains(event.target) && event.target !== menuToggle) {
                    sidebar.classList.remove('active');
                }
            }
        });

        // Global Search
        document.getElementById('globalSearchBtn')?.addEventListener('click', function() {
            document.getElementById('globalSearchModal').style.display = 'flex';
            setTimeout(() => {
                document.getElementById('globalSearchInput')?.focus();
            }, 100);
        });

        function closeGlobalSearch() {
            document.getElementById('globalSearchModal').style.display = 'none';
            document.getElementById('globalSearchInput').value = '';
            document.getElementById('globalSearchResults').innerHTML = '<p style="color: #94a3b8; text-align: center; padding: 20px;">Nhập từ khóa để tìm kiếm...</p>';
        }

        // Global search functionality
        let globalSearchTimeout;
        document.getElementById('globalSearchInput')?.addEventListener('input', function(e) {
            clearTimeout(globalSearchTimeout);
            const searchTerm = e.target.value;
            
            if (searchTerm.length < 2) {
                document.getElementById('globalSearchResults').innerHTML = '<p style="color: #94a3b8; text-align: center; padding: 20px;">Nhập từ khóa để tìm kiếm...</p>';
                return;
            }

            globalSearchTimeout = setTimeout(() => {
                document.getElementById('globalSearchResults').innerHTML = '<p style="color: #94a3b8; text-align: center; padding: 20px;"><i class="fas fa-spinner fa-spin"></i> Đang tìm kiếm...</p>';
                
                // Simulate search results
                setTimeout(() => {
                    const results = `
                        <div style="margin-bottom: 16px;">
                            <h4 style="font-size: 0.85rem; font-weight: 600; color: #94a3b8; text-transform: uppercase; margin-bottom: 8px;">Sản phẩm</h4>
                            <a href="/Products" style="display: block; padding: 12px; border-radius: 8px; text-decoration: none; color: #1e293b; transition: all 0.2s;" onmouseover="this.style.background='#f8fafc'" onmouseout="this.style.background='transparent'">
                                <div style="font-weight: 600;">Coca Cola 330ml</div>
                                <div style="font-size: 0.9rem; color: #64748b;">SKU: CC001 - 15,000₫</div>
                            </a>
                        </div>
                        <div style="margin-bottom: 16px;">
                            <h4 style="font-size: 0.85rem; font-weight: 600; color: #94a3b8; text-transform: uppercase; margin-bottom: 8px;">Đơn hàng</h4>
                            <a href="/Orders" style="display: block; padding: 12px; border-radius: 8px; text-decoration: none; color: #1e293b; transition: all 0.2s;" onmouseover="this.style.background='#f8fafc'" onmouseout="this.style.background='transparent'">
                                <div style="font-weight: 600;">Đơn hàng #001234</div>
                                <div style="font-size: 0.9rem; color: #64748b;">Nguyễn Văn A - 250,000₫</div>
                            </a>
                        </div>
                        <div>
                            <h4 style="font-size: 0.85rem; font-weight: 600; color: #94a3b8; text-transform: uppercase; margin-bottom: 8px;">Khách hàng</h4>
                            <a href="/Customers" style="display: block; padding: 12px; border-radius: 8px; text-decoration: none; color: #1e293b; transition: all 0.2s;" onmouseover="this.style.background='#f8fafc'" onmouseout="this.style.background='transparent'">
                                <div style="font-weight: 600;">Nguyễn Văn A</div>
                                <div style="font-size: 0.9rem; color: #64748b;">nguyenvana@email.com - 0901234567</div>
                            </a>
                        </div>
                    `;
                    document.getElementById('globalSearchResults').innerHTML = results;
                }, 500);
            }, 500);
        });

        // Notifications
        document.getElementById('notificationBtn')?.addEventListener('click', function() {
            document.getElementById('notificationsModal').style.display = 'flex';
        });

        function closeNotifications() {
            document.getElementById('notificationsModal').style.display = 'none';
        }

        // Settings
        document.getElementById('settingsBtn')?.addEventListener('click', function() {
            document.getElementById('settingsModal').style.display = 'flex';
        });

        function closeSettings() {
            document.getElementById('settingsModal').style.display = 'none';
        }

        // Close modals when clicking overlay
        document.querySelectorAll('.modal-overlay').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.style.display = 'none';
                }
            });
        });

        // Close modals with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.querySelectorAll('.modal-overlay').forEach(modal => {
                    modal.style.display = 'none';
                });
            }
        });

        // Toast notification system
        window.showToast = function(message, type = 'success', title = '') {
            const container = document.getElementById('toastContainer');
            if (!container) return;

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            const icons = {
                success: 'fa-check-circle',
                error: 'fa-times-circle',
                warning: 'fa-exclamation-triangle',
                info: 'fa-info-circle'
            };

            const titles = {
                success: title || 'Thành công',
                error: title || 'Lỗi',
                warning: title || 'Cảnh báo',
                info: title || 'Thông tin'
            };

            toast.innerHTML = `
                <div class="toast-icon">
                    <i class="fas ${icons[type] || icons.success}"></i>
                </div>
                <div class="toast-content">
                    <div class="toast-title">${titles[type]}</div>
                    <div class="toast-message">${message}</div>
                </div>
                <button class="toast-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            `;

            container.appendChild(toast);

            // Auto remove after 5 seconds
            setTimeout(() => {
                toast.classList.add('removing');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        };

        // Wrapper functions for convenience
        window.toast = {
            success: (message, title) => showToast(message, 'success', title),
            error: (message, title) => showToast(message, 'error', title),
            warning: (message, title) => showToast(message, 'warning', title),
            info: (message, title) => showToast(message, 'info', title)
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
